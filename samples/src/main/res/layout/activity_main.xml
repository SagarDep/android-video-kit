<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.groupme.android.videokit.samples.MainActivity">

    <Button
        android:id="@+id/btn_encode_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encode Video Test"
        android:layout_centerInParent="true"/>


    <TextView
        android:id="@+id/input_file_size"
        android:layout_below="@+id/btn_encode_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/output_file_size"
        android:layout_below="@+id/input_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/time_to_encode"
        android:layout_below="@+id/output_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Output Video"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
